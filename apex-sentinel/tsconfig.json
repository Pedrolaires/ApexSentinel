{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": false,
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
      "node_modules",
      "src/parser",
      "**/*.spec.ts"
  ],
  "include": ["src", "src/types"]
}
